<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked/Selected state - matches your existing chip style -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#F3E5F5" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#9C27B0" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E1BEE7" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#6A1B9A" />
        </shape>
    </item>

    <!-- Default state - light purple background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#E1BEE7" />
        </shape>
    </item>
</selector>
